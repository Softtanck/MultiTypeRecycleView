<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_backgroud"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_informationTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_marging"
        android:paddingBottom="@dimen/small_padding"
        android:paddingLeft="@dimen/normal_padding"
        android:paddingRight="@dimen/normal_padding"
        android:paddingTop="@dimen/small_padding"
        android:textColor="@color/gray_pressed"
        android:textSize="@dimen/key_text_small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/normal_marging"
        android:background="@drawable/more_back"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_infomation_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/normal_padding" />

        <TextView
            android:id="@+id/tv_infomation_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/normal_padding"
            android:textColor="@color/gray_normal_6"
            android:textSize="@dimen/titile_side_text_size" />

        <TextView
            android:id="@+id/tv_infomation_item_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/normal_padding"
            android:textColor="@color/gray_pressed"
            android:textSize="@dimen/item_medium_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_backgroud"
            android:paddingLeft="@dimen/normal_padding"
            android:paddingRight="@dimen/normal_padding" />

        <TextView
            android:id="@+id/btn_infomation_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableRight="@drawable/right"
            android:gravity="left|center_vertical"
            android:padding="@dimen/normal_padding"
            android:text="@string/read_allTheWords"
            android:textColor="@color/gray_normal_6"
            android:textSize="@dimen/titile_side_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:paddingLeft="@dimen/normal_padding"
            android:paddingRight="@dimen/normal_padding" />
    </LinearLayout>

</LinearLayout>