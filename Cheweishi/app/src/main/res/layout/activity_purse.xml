<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_gray"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/double_large_marging"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rel_purse_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/more_back"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/large_padding"
                android:paddingLeft="@dimen/large_padding"
                android:paddingTop="@dimen/large_padding"
                android:src="@drawable/qianbao_yue" />

            <ImageView
                android:id="@+id/img_purse_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/normal_padding"
                android:src="@drawable/right" />

            <TextView
                android:id="@+id/tv_purse_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_balance"
                android:layout_alignBottom="@+id/tv_balance"
                android:layout_marginRight="@dimen/small_padding"
                android:layout_toLeftOf="@+id/tv_yuan"
                android:text="-"
                android:textColor="@color/red_background"
                android:textSize="@dimen/ttf_sixteen" />

            <TextView
                android:id="@+id/tv_yuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_purse_balance"
                android:layout_alignBottom="@+id/tv_purse_balance"
                android:layout_alignRight="@+id/img_purse_balance"
                android:layout_marginRight="@dimen/xxlarge_marging"
                android:text="元"
                android:textColor="@color/gray_normal"
                android:textSize="@dimen/ttf_sixteen" />

            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_balance"
                android:paddingBottom="@dimen/large_padding"
                android:paddingLeft="@dimen/small_padding"
                android:paddingTop="@dimen/large_padding"
                android:text="@string/purse_current_balance"
                android:textColor="@color/gray_normal"
                android:textSize="@dimen/ttf_sixteen" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/normal_padding"
            android:layout_marginRight="@dimen/normal_padding"
            android:background="@color/line_gray" />

        <RelativeLayout
            android:id="@+id/rel_purse_certificates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/more_back"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_certif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/large_padding"
                android:paddingLeft="@dimen/large_padding"
                android:paddingTop="@dimen/large_padding"
                android:src="@drawable/qianbao_hogbao" />

            <ImageView
                android:id="@+id/img_purse_certificates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/normal_padding"
                android:src="@drawable/right" />

            <TextView
                android:id="@+id/tv_purse_certificates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView1"
                android:layout_alignBottom="@+id/textView1"
                android:layout_marginRight="@dimen/small_marging"
                android:layout_toLeftOf="@+id/textView2"
                android:text="-"
                android:textColor="@color/red_background"
                android:textSize="@dimen/ttf_sixteen"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_purse_certificates"
                android:layout_alignBottom="@+id/tv_purse_certificates"
                android:layout_alignRight="@+id/img_purse_certificates"
                android:layout_marginRight="@dimen/xxlarge_marging"
                android:text="个"
                android:textColor="@color/gray_normal"
                android:textSize="@dimen/ttf_sixteen"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_certif"
                android:paddingBottom="@dimen/large_padding"
                android:paddingLeft="@dimen/small_padding"
                android:paddingTop="@dimen/large_padding"
                android:text="@string/purse_certificates"
                android:textColor="@color/gray_normal"
                android:textSize="@dimen/ttf_sixteen" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/normal_padding"
            android:layout_marginRight="@dimen/normal_padding"
            android:background="@color/line_gray" />

        <RelativeLayout
            android:id="@+id/rel_purse_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/more_back"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/large_padding"
                android:paddingLeft="@dimen/large_padding"
                android:paddingTop="@dimen/large_padding"
                android:src="@drawable/qianbao_yue" />

            <ImageView
                android:id="@+id/img_purse_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/normal_padding"
                android:src="@drawable/right" />

            <TextView
                android:id="@+id/tv_purse_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_red"
                android:layout_alignBottom="@+id/tv_red"
                android:layout_marginRight="@dimen/small_padding"
                android:layout_toLeftOf="@+id/tv_yuan_red"
                android:text="-"
                android:textColor="@color/red_background"
                android:textSize="@dimen/ttf_sixteen" />

            <TextView
                android:id="@+id/tv_yuan_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_purse_red"
                android:layout_alignBottom="@+id/tv_purse_red"
                android:layout_alignRight="@+id/img_purse_red"
                android:layout_marginRight="@dimen/xxlarge_marging"
                android:text="元"
                android:textColor="@color/gray_normal"
                android:textSize="@dimen/ttf_sixteen" />

            <TextView
                android:id="@+id/tv_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_red"
                android:paddingBottom="@dimen/large_padding"
                android:paddingLeft="@dimen/small_padding"
                android:paddingTop="@dimen/large_padding"
                android:text="@string/purse_red"
                android:textColor="@color/gray_normal"
                android:textSize="@dimen/ttf_sixteen" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/normal_padding"
            android:layout_marginRight="@dimen/normal_padding"
            android:background="@color/line_gray" />

        <RelativeLayout
            android:id="@+id/rel_purse_integral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/more_back"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/large_padding"
                android:paddingLeft="@dimen/large_padding"
                android:paddingTop="@dimen/large_padding"
                android:src="@drawable/qianbao_jifen" />

            <TextView
                android:id="@+id/tv_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/img_integral"
                android:paddingBottom="@dimen/large_padding"
                android:paddingLeft="@dimen/small_padding"
                android:paddingTop="@dimen/large_padding"
                android:text="@string/purse_integral"
                android:textColor="@color/gray_normal"
                android:textSize="@dimen/ttf_sixteen" />

            <ImageView
                android:id="@+id/img_purse_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/normal_padding"
                android:src="@drawable/right" />

            <TextView
                android:id="@+id/tv_fen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_integral"
                android:layout_alignBottom="@+id/tv_integral"
                android:layout_alignRight="@+id/img_purse_integral"
                android:layout_marginRight="@dimen/xxlarge_marging"
                android:text="分"
                android:textColor="@color/gray_normal"
                android:textSize="@dimen/ttf_sixteen" />

            <TextView
                android:id="@+id/tv_purse_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_integral"
                android:layout_alignBottom="@+id/tv_integral"
                android:layout_marginRight="@dimen/small_marging"
                android:layout_toLeftOf="@+id/tv_fen"
                android:text="-"
                android:textColor="@color/red_background"
                android:textSize="@dimen/ttf_sixteen" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/normal_padding"
            android:layout_marginRight="@dimen/normal_padding"
            android:background="@color/line_gray" />

        <RelativeLayout
            android:id="@+id/rel_purse_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/more_back"
            android:gravity="center_vertical"
            android:visibility="gone">


            <ImageView
                android:id="@+id/img_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/large_padding"
                android:paddingLeft="@dimen/large_padding"
                android:paddingRight="@dimen/small_padding"
                android:paddingTop="@dimen/large_padding"
                android:src="@drawable/qianbao_dianhua" />

            <ImageView
                android:id="@+id/img_purse_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/normal_padding"
                android:src="@drawable/right" />

            <TextView
                android:id="@+id/tv_purse_fee_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_phone"
                android:layout_alignBottom="@+id/tv_phone"
                android:layout_marginRight="@dimen/small_marging"
                android:layout_toLeftOf="@+id/tv_phone_yuan"
                android:textColor="@color/red_background"
                android:textSize="@dimen/ttf_sixteen"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_phone_yuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_purse_fee_balance"
                android:layout_alignBottom="@+id/tv_purse_fee_balance"
                android:layout_alignRight="@+id/img_purse_phone"
                android:layout_marginRight="@dimen/xxlarge_marging"
                android:textColor="@color/gray_normal"
                android:textSize="@dimen/ttf_sixteen"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_phone"
                android:paddingBottom="@dimen/large_padding"
                android:paddingLeft="@dimen/small_padding"
                android:paddingTop="@dimen/large_padding"
                android:text="@string/purse_balance_of_phone"
                android:textColor="@color/gray_normal"
                android:textSize="@dimen/ttf_sixteen" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/normal_padding"
            android:layout_marginRight="@dimen/normal_padding"
            android:background="@color/line_gray" />

    </LinearLayout>
</LinearLayout>
