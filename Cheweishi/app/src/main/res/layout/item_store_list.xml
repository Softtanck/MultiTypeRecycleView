<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/more_back"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_store_item_tenant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="我家的小店"
        android:textColor="@color/all_track_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_store_item"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:src="@drawable/udesk_defalut_image_loading" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <!--加的星星-->
                <LinearLayout
                    android:id="@+id/ll_store_item_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />

                <TextView
                    android:id="@+id/tv_store_item_rate_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="5.0分"
                    android:textColor="@color/orange"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_store_item_rateCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="101条评论"
                    android:textColor="@color/btn_gray_normal"
                    android:textSize="13sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_store_item_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxEms="14"
                    android:singleLine="true"
                    android:text="四川省成都市双流县中和镇中和新下街华阳老店"
                    android:textColor="@color/btn_gray_normal"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_store_item_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="1.26km"
                    android:textColor="@color/btn_gray_normal"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tv_store_item_all_money_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="优惠价"
                    android:textColor="@color/light_gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_store_item_all_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tv_store_item_all_money_desc"
                    android:text="￥18"
                    android:textColor="@color/text_fPrice_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_store_item_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tv_store_item_all_money"
                    android:text="￥30"
                    android:textColor="@color/gray_pressed"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_store_item_wash_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tv_store_item_money"
                    android:text="普洗"
                    android:textColor="@color/light_gray"
                    android:textSize="12sp" />
                <!--android:focusable="true"
                                    android:focusableInTouchMode="true"-->
                <TextView
                    android:id="@+id/tv_store_item_buy"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/pay_click_selector"
                    android:gravity="center"
                    android:text="支付"
                    android:textColor="@color/orange"
                    android:textSize="12sp" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>