<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/normal_padding">

    <TextView
        android:id="@+id/tv_peccancy_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/block_column_1"
        android:textSize="@dimen/titile_side_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/more_back"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_peccany_item"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/normal_marging"
            android:src="@drawable/car_default" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/large_marging"
            android:background="@color/line_gray" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_peccany_plateCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="渝BTS895"
                android:textColor="@color/gray_normal"
                android:textSize="@dimen/titile_side_text_size" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_marging"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/normal_marging"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/pessany_not_deal"
                        android:textColor="@color/gray_pressed"
                        android:textSize="@dimen/home_car_text_size" />

                    <TextView
                        android:id="@+id/tv_notDeal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small_marging"
                        android:gravity="center_vertical"
                        android:text="0"
                        android:textColor="@color/gray_normal"
                        android:textSize="@dimen/home_car_text_size" />
                </LinearLayout>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/small_marging"
                    android:background="@color/line_gray" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/large_marging"
                    android:layout_marginRight="@dimen/large_marging"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/coin_normal"
                        android:gravity="center_vertical"
                        android:text="@string/pessany_cut_second"
                        android:textColor="@color/gray_pressed"
                        android:textSize="@dimen/home_car_text_size" />

                    <TextView
                        android:id="@+id/tv_cut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small_marging"
                        android:gravity="center_vertical"
                        android:text="0"
                        android:textColor="@color/gray_normal"
                        android:textSize="@dimen/home_car_text_size" />
                </LinearLayout>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/small_marging"
                    android:background="@color/line_gray"
                    android:paddingBottom="@dimen/small_padding"
                    android:paddingTop="@dimen/small_padding" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/large_marging"
                    android:layout_marginRight="@dimen/large_marging"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/money_normal"
                        android:gravity="center_vertical"
                        android:text="@string/pessany_punish_second"
                        android:textColor="@color/gray_pressed"
                        android:textSize="@dimen/home_car_text_size" />

                    <TextView
                        android:id="@+id/tv_punish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small_marging"
                        android:gravity="center_vertical"
                        android:text="0"
                        android:textColor="@color/gray_normal"
                        android:textSize="@dimen/home_car_text_size" />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_peccancy_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="2016-4-19 16:52:12" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>