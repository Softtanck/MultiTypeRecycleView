<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_backgroud"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <LinearLayout
        android:id="@+id/ll_boundDeviceID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/normal_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_device"
            android:textColor="@color/gray_normal"
            android:textSize="@dimen/titile_side_text_size" />

        <TextView
            android:id="@+id/tv_car_device"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:clickable="false"
            android:focusable="false"
            android:gravity="right"
            android:hint="@string/add_deviceChoose"
            android:maxLength="20"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/titile_side_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/normal_marging"
            android:layout_marginRight="@dimen/normal_marging"
            android:background="@color/line_gray" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_addDevice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/double_double_large_marging"
        android:background="@drawable/more_back"
        android:padding="@dimen/normal_padding"
        android:text="@string/save"
        android:textColor="@color/main_blue"
        android:textSize="@dimen/text_size_medium" />

</LinearLayout>