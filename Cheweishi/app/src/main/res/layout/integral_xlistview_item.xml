<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_backgroud" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/normal_marging"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sigeAndmileage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/aggregatescore_left_and_top"
                android:layout_marginTop="@dimen/small_padding"
                android:textColor="@color/text_black_colcor"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/integral_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/aggregatescore_left_and_top"
                android:layout_marginTop="@dimen/small_padding"
                android:textColor="#999999"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="right|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/integral_textview_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sdfds"
                android:textColor="@color/red"
                android:textSize="@dimen/ttf_sixteen" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>