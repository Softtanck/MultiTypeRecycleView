<?xml version="1.0" encoding="utf-8"?>
<com.cheweishi.android.widget.TwoAnimationLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/main_iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/home_shanchu" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_marging"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:layout_weight="0.5">

                    <ImageView
                        android:id="@+id/main_iv_carlogo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:maxHeight="@dimen/car_logo"
                        android:maxWidth="@dimen/car_logo"
                        android:layout_marginLeft="@dimen/top_left_small_padding"

                        />

                    <TextView
                        android:id="@+id/main_tv_leixing1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:gravity="center"
                        android:textSize="@dimen/titile_side_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="right|center_vertical"
                    android:layout_marginRight="20dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">


                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginRight="13dp"
                        android:text="@string/comprehensive"
                        android:textColor="@color/main_text3"
                        android:textSize="@dimen/titile_side_text_size" />

                    <ImageView
                        android:id="@+id/main_iv_checkstatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.35"
                    android:gravity="left|center_vertical">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/top_left_small_padding"
                        android:text="@string/vehicle_status"
                        android:textColor="@color/main_text3"
                        android:textSize="@dimen/titile_side_text_size" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/RelativeLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.27"
                    android:gravity="center">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/home_jidutiao_cao1">

                        <ImageView
                            android:id="@+id/iv_pb_oneD"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/home_jindutiao1"
                            android:visibility="invisible" />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@drawable/home_jindutiao_touming" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.38"
                    android:gravity="left|center_vertical">

                    <TextView
                        android:id="@+id/main_tv_vehicle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/normal_marging"
                        android:textColor="@color/main_text6"
                        android:textSize="@dimen/key_text_big" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.35"
                    android:gravity="left|center_vertical">

                    <TextView
                        android:id="@+id/mian_tv_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/top_left_small_padding"
                        android:text="@string/yanghu_status"
                        android:textColor="@color/main_text3"
                        android:textSize="@dimen/titile_side_text_size" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.27"
                    android:gravity="center">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/home_jidutiao_cao1">

                        <ImageView
                            android:id="@+id/iv_pb_oneD2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/home_jindutiao1"
                            android:visibility="invisible" />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@drawable/home_jindutiao_touming" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.38"
                    android:gravity="left|center_vertical">

                    <TextView
                        android:id="@+id/main_tv_yinfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/normal_marging"
                        android:textColor="@color/main_text3"
                        android:textSize="@dimen/key_text_big" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/top_left_small_padding"
                    android:text="@string/fault_detect"
                    android:textColor="@color/main_text3"
                    android:textSize="@dimen/titile_side_text_size" />

                <TextView
                    android:id="@+id/main_tv_fault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/top_left_small_padding"
                    android:textColor="@color/main_text4"
                    android:textSize="@dimen/titile_side_text_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/main_btn_retesting"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/top_left_small_padding"
                    android:layout_marginRight="@dimen/large_marging"
                    android:text="@string/re_testing"
                    android:background="@drawable/main_button"
                    android:textSize="@dimen/titile_side_text_size"
                    android:textColor="@color/main_text3" />

                <TextView
                    android:id="@+id/main_btn_seedetails"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/large_marging"
                    android:layout_marginRight="@dimen/top_left_small_padding"
                    android:background="@drawable/main_button"
                    android:text="@string/see_details"
                    android:textColor="@color/main_text3"
                    android:textSize="@dimen/titile_side_text_size" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</com.cheweishi.android.widget.TwoAnimationLayout>