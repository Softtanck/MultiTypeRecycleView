<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="20.0dip">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/friend_circel_hot_page"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/washcar_dialog_title"
            android:gravity="center"
            android:padding="@dimen/normal_padding"
            android:text="预约洗车"
            android:textColor="@color/white"
            android:textSize="@dimen/title__text_size"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/normal_padding">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我们将为您竭诚服务，期待您的光临!"
                android:textSize="@dimen/titile_side_text_size"
                android:textColor="@color/gray_normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="亲，预约订单有效期为72小时哟~"
                android:textColor="@color/red"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="@color/red" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_bottomLayout"
            android:layout_width="fill_parent"
            android:layout_height="60.0dip"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/positiveButton"
                android:layout_width="match_parent"
                android:layout_height="40.0dip"
                android:layout_margin="@dimen/large_marging"
                android:layout_weight="1"
                android:background="@drawable/dialog_pos_back"
                android:gravity="center"
                android:text="马上预约"
                android:textSize="@dimen/titile_side_text_size"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/negativeButton"
                android:layout_width="match_parent"
                android:layout_height="40.0dip"
                android:layout_margin="@dimen/large_marging"
                android:layout_marginLeft="20.0dip"
                android:layout_weight="1"
                android:background="@drawable/dialog_pos_back"
                android:gravity="center"
                android:textSize="@dimen/titile_side_text_size"
                android:text="取消预约"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>