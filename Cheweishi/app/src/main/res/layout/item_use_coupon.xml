<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="15dp">

    <LinearLayout
        android:id="@+id/ll_use_coupon_left"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="3"
        android:background="@drawable/b_item_coupon_pink_left"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_use_coupon_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="100"
            android:textColor="@color/gray_backgroud"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_use_coupon_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:singleLine="true"
            android:text="我是描述信息"
            android:textColor="@color/gray_backgroud" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_use_coupon_right"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1.5"
        android:background="@drawable/b_item_coupon_pink_right"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_use_coupon_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="商家优惠券"
            android:textColor="@color/gray_backgroud" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_use_coupon_check"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:src="@drawable/mess_yuan" />

</LinearLayout>