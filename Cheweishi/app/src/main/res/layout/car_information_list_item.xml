<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/more_back">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/normal_padding">

        <com.cheweishi.android.widget.XCRoundImageView
            android:id="@+id/img"
            android:layout_width="@dimen/img_car_height"
            android:layout_height="@dimen/img_car_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/small_marging"></com.cheweishi.android.widget.XCRoundImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignTop="@id/img"
            android:layout_toRightOf="@id/img"
            android:gravity="top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/small_marging"
                android:layout_weight="1"
                android:gravity="top"
                android:singleLine="true"
                android:textColor="@color/text_black_colcor"
                android:textSize="@dimen/titile_side_text_size" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="top"
                android:textColor="@color/gray_normal"
                android:textSize="@dimen/item_small_text_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_info_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img"
            android:layout_toRightOf="@id/img"
            android:singleLine="true"
            android:textColor="@color/gray_normal"
            android:textSize="@dimen/item_medium_text_size" />
    </RelativeLayout>

</RelativeLayout>