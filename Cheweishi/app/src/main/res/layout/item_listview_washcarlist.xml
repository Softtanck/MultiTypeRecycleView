<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1">

    <!-- 高亮drawable  item_click_white_gray -->

    <LinearLayout
        android:id="@+id/park_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/small_padding"
        android:paddingLeft="@dimen/normal_padding"
        android:paddingRight="@dimen/normal_padding"
        android:paddingTop="@dimen/small_padding">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/car_iv_location"
                android:layout_width="@dimen/list_item_img"
                android:layout_height="@dimen/list_item_img"
                android:adjustViewBounds="true"
                android:maxHeight="@dimen/list_item_img"
                android:maxWidth="@dimen/list_item_img"
                android:scaleType="fitCenter"
                android:src="@drawable/zhaochewei_img" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/normal_marging"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:gravity="left|top">

                <TextView
                    android:id="@+id/car_tv_car_iv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="fd副书记打开"
                    android:textColor="@color/gray_normal"
                    android:textSize="@dimen/titile_side_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/haoping" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/haoping"
                    android:layout_marginLeft="@dimen/set_top_marging" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/haoping"
                    android:layout_marginLeft="@dimen/set_top_marging" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100%好评"
                    android:layout_marginLeft="@dimen/set_top_marging"
                    android:textColor="@color/deep_orange" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:gravity="left|top">

                <TextView
                    android:id="@+id/car_xlocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="副书记开房大厦d"
                    android:textColor="@color/gray"
                    android:layout_toLeftOf="@+id/tv_washcar_km"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/tv_washcar_km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="22km"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size_small" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/white"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_wash_car_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/gray_normal"
            android:text="普通洗车" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:paddingLeft="@dimen/small_padding"
            android:paddingRight="@dimen/small_padding"
            android:text="会员红包"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/ttf_ten" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:textColor="@color/gray"
            android:text="优惠价" />

        <TextView
            android:id="@+id/tv_wash_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="￥16"
            android:textColor="@color/red"
            android:gravity="center"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/tv_old_wash_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="left"
            android:text="￥30"
            android:textSize="@dimen/ttf_twelve"
            android:layout_gravity="center_vertical"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/tv_wash_car_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/payMoney"
            android:textColor="@color/blue"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/small_padding"
            android:background="@drawable/pay_click_selector"
            android:layout_marginRight="@dimen/small_marging"
            android:layout_gravity="right"
            android:textSize="@dimen/item_content_size" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/line_gray" />

</LinearLayout>