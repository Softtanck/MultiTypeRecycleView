<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_backgroud"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/large_marging"
        android:layout_marginRight="@dimen/large_marging"
        android:layout_marginTop="@dimen/normal_marging"
        android:background="@drawable/findcarportkuang2x"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_marging"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/findcarportlistview_item_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/normal_marging"
                android:layout_marginLeft="@dimen/normal_marging"
                android:textColor="@color/black"
                android:textSize="@dimen/titile_side_text_size" />

            <TextView
                android:id="@+id/findcarport_textview_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:ellipsize="end"
                android:maxEms="12"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/titile_side_text_size" />

        </LinearLayout>

        <TextView
            android:id="@+id/findcarport_listview_item_addressdetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/double_large_marging"
            android:textColor="@color/gray_normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_thumbnail_spacing"
                android:layout_marginTop="@dimen/top_left_small_padding"
                android:background="@color/gray_backgroud" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/findcarport_linearLayoutLocation"
                    android:layout_width="@dimen/blue_sub_action_button_content_margin"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/top_left_small_padding"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/findcarportlistview_item_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/findcarportlocation2x"
                        android:drawablePadding="@dimen/small_padding"
                        android:textColor="@color/black" />
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/image_thumbnail_spacing"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/top_left_small_padding"
                    android:background="@color/gray_backgroud" />

                <LinearLayout
                    android:id="@+id/findcarport_linearLayoutNavitave"
                    android:layout_width="@dimen/blue_sub_action_button_content_margin"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/top_left_small_padding"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/findcarport2x"
                        android:drawablePadding="@dimen/small_padding"
                        android:gravity="center"
                        android:text="@string/mycar_to_there"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>