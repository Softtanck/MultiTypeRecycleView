<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_sp_my_order_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="@dimen/normal_padding">


    <ImageView
        android:id="@+id/iv_sp_my_order_item"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/top_left_small_padding"
        android:scaleType="centerCrop" />


    <TextView
        android:id="@+id/tv_sp_my_order_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/top_left_small_padding"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/item_content_size" />

    <TextView
        android:id="@+id/tv_sp_my_order_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_sp_my_order_money"
        android:layout_marginRight="@dimen/top_left_small_padding"
        android:layout_marginTop="@dimen/normal_marging"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/item_content_size" />

    <TextView
        android:id="@+id/tv_sp_my_order_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_marging"
        android:layout_toLeftOf="@id/tv_sp_my_order_money"
        android:layout_toRightOf="@id/iv_sp_my_order_item"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/item_content_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@id/iv_sp_my_order_item"
        android:layout_marginLeft="@dimen/normal_marging"
        android:layout_marginRight="@dimen/normal_marging"
        android:layout_marginTop="@dimen/normal_marging"
        android:background="@color/line_gray" />
</RelativeLayout>