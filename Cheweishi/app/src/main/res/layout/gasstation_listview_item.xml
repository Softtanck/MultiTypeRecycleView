<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_backgroud"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/large_marging"
        android:layout_marginRight="@dimen/large_marging"
        android:layout_marginTop="@dimen/normal_marging"
        android:background="@drawable/findcarportkuang2x"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_marging"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gasstationlistview_item_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/normal_marging"
                android:layout_marginLeft="10dp"
                android:text="1"
                android:textColor="@color/text_black_colcor"
                android:textSize="@dimen/titile_side_text_size" />

            <TextView
                android:id="@+id/gasstation_textview_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="加油站"
                android:textColor="@color/text_black_colcor"
                android:textSize="@dimen/titile_side_text_size" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/normal_marging"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/findcarportlocation2x" />

                <TextView
                    android:id="@+id/gasstationlistview_item_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/small_marging"
                    android:text="1235"
                    android:textColor="@color/text_black_colcor"
                    android:textSize="@dimen/titile_side_text_size" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/gasstation_listview_item_addressdetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sameday_oilwear"
            android:textColor="@color/gray_normal_6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_thumbnail_spacing"
                android:layout_marginTop="@dimen/top_left_small_padding"
                android:background="@color/gray_backgroud" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/gasstation_linearLayoutLocation"
                    android:layout_width="@dimen/blue_sub_action_button_content_margin"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/top_left_small_padding"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom">

                    <ImageView
                        android:id="@+id/gasstation_imageview_pnone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dianhua" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/three_list_item"
                        android:text="@string/phone"
                        android:textColor="@color/text_black_colcor" />
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/image_thumbnail_spacing"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/top_left_small_padding"
                    android:background="@color/gray_backgroud" />

                <LinearLayout
                    android:id="@+id/gasstation_linearLayoutNavitave"
                    android:layout_width="@dimen/blue_sub_action_button_content_margin"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/top_left_small_padding"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/chewei_go" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/three_list_item"
                        android:text="@string/mycar_to_there"
                        android:textColor="@color/text_black_colcor" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>