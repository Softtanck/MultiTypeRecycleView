<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:padding="@dimen/normal_padding">

    <ImageView
        android:id="@+id/iv_bc_item_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/mess_yuan_click" />

    <ImageView
        android:id="@+id/iv_bc_item_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/small_marging"
        android:layout_toRightOf="@id/iv_bc_item_check"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/small_marging"
        android:layout_toRightOf="@id/iv_bc_item_icon"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_bc_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/item_content_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="ï¿¥"
                android:textColor="@color/red"
                android:textSize="@dimen/item_small_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_bc_item_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="0"
                android:textColor="@color/red"
                android:textSize="@dimen/item_content_size"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_bc_item_num_les"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="@drawable/product_et_bg"
                android:padding="10dp"
                android:src="@drawable/ic_num_les" />

            <TextView
                android:id="@+id/tv_bc_item_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/product_et_bg"
                android:maxLength="5"
                android:paddingBottom="@dimen/small_padding"
                android:paddingLeft="@dimen/normal_marging"
                android:paddingRight="@dimen/normal_marging"
                android:paddingTop="@dimen/small_padding"
                android:text="1"
                android:textSize="@dimen/item_small_text_size" />

            <ImageView
                android:id="@+id/iv_bc_item_num_add"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="@drawable/product_et_bg"
                android:padding="10dp"
                android:src="@drawable/ic_num_add" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>