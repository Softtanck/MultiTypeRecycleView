<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="20.0dip">

    <!--android:background="@drawable/friend_circel_hot_page"-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/friend_circel_hot_page"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/normal_padding"
            android:paddingRight="@dimen/normal_padding"
            android:paddingTop="@dimen/normal_padding"
            android:text="提示"
            android:textColor="@color/main_blue"
            android:textSize="@dimen/title__text_size"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/message"
                style="@style/text_16_666666"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingMultiplier="1.5"
                android:padding="@dimen/normal_padding"
                android:textSize="@dimen/key_text_small" />

            <EditText
                android:id="@+id/et_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15.0dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:layout_marginTop="15.0dip"
                android:background="@drawable/login_kuang2x"
                android:hint="@string/user_sign_remind"
                android:lineSpacingMultiplier="1.5"
                android:paddingLeft="@dimen/normal_padding"
                android:paddingRight="@dimen/normal_padding"
                android:textSize="@dimen/titile_side_text_size"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:id="@+id/bottom_line"
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="#ffd0d0d0" />

        <LinearLayout
            android:id="@+id/dialog_bottomLayout"
            android:layout_width="fill_parent"
            android:layout_height="60.0dip"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/positiveButton"
                android:layout_width="match_parent"
                android:layout_height="40.0dip"
                android:layout_margin="@dimen/large_marging"
                android:layout_weight="1"
                android:background="@drawable/dialog_pos_back"
                android:gravity="center"
                android:text="@string/Submit"
                android:textSize="@dimen/titile_side_text_size"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/negativeButton"
                android:layout_width="match_parent"
                android:layout_height="40.0dip"
                android:layout_margin="@dimen/large_marging"
                android:layout_marginLeft="20.0dip"
                android:layout_weight="1"
                android:background="@drawable/dialog_pos_back"
                android:gravity="center"
                android:text="@string/cancel"
                android:textSize="@dimen/titile_side_text_size"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>