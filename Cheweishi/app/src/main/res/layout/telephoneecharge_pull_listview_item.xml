<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_thumbnail_spacing"
        android:layout_marginLeft="@dimen/normal_marging"
        android:layout_marginRight="@dimen/normal_marging"
        android:background="@color/gray_backgroud" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dian_width">

            <TextView
                android:id="@+id/telephone_pulltorefresh_tv_moldmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/aggregatescore_left_and_top"
                android:layout_marginTop="@dimen/dian_width"
                android:textColor="@color/home_text_light_black"
                android:maxEms="10"
                android:singleLine="true"
                android:textSize="@dimen/car_text_large" />

            <TextView
                android:id="@+id/telephone_pulltorefresh_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/aggregatescore_left_and_top"
                android:layout_marginTop="@dimen/margin_chat_activity"
                android:textColor="@color/gray_pressed" />
        </LinearLayout>

        <TextView
            android:id="@+id/telephone_pulltorefresh_tv_money"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dian_width"
            android:gravity="center_vertical|right"
            android:textColor="@color/text_black_colcor"
            android:singleLine="true"
            android:textSize="@dimen/titile_side_text_size" />
    </LinearLayout>

</LinearLayout>